<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/textheader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ข้อมูลการสั่งซื้อ"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_setting" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/transpotstatus"
                    android:textSize="25sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:id="@+id/texttranspotstatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:textSize="20sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/Hospital"
                    android:textSize="25sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:id="@+id/texthospital"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:textSize="20sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/Doctor"
                    android:textSize="25sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:id="@+id/textdoctor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:textSize="20sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/SurgeryDate"
                    android:textSize="25sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />

                <EditText
                    android:id="@+id/EditTextSurgeryDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/SurgeryTime"
                    android:textSize="25sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />

                <EditText
                    android:id="@+id/EditTextSurgeryTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/patient"
                    android:textSize="25sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:id="@+id/textpatient"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:textSize="20sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/HN"
                    android:textSize="25sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:id="@+id/textHN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:textSize="20sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/textheaderinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="รายการสั่งซื้อ"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_setting" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ลำดับ"
                    android:textSize="20sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="Implant"
                    android:textSize="20sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="รหัสสินค้า"
                    android:textSize="20sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text="รายละเอียด"
                    android:textSize="20sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text="จำนวน"
                    android:textSize="20sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="จัดส่ง"
                    android:textSize="20sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_setting" />

            <com.codefriday.bangkokunitrade.util.ExpandableHeightListView
                android:id="@+id/listOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="เครื่องมือเพิ่มเติม"
                    android:textSize="25sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutlistTools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="รายการเครื่องมือเพิ่มเติม"
                    android:textSize="25sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutlistBiomaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="เครื่องมือที่ระบุเพิ่มเติม"
                    android:textSize="25sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:id="@+id/textAddTools"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:textSize="20sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="เครื่องมือเฉพาะแพทย์"
                    android:textSize="25sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:id="@+id/textDoctorTools"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:textSize="20sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="การจัดส่งเครื่องมือ"
                    android:textSize="25sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:id="@+id/texttranspot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:textSize="20sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="ชื่อผู้แทน"
                    android:textSize="25sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />

                <com.codefriday.bangkokunitrade.util.TypefaceTextView
                    android:id="@+id/textsale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:textSize="20sp"
                    geekui:customTypeface="fonts/PSLKittithadaProBold.otf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:padding="5dp" >

                <Button
                    android:id="@+id/buttonUpdate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:text="Update" />

                <Button
                    android:id="@+id/buttonCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:text="Cancel Order" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>